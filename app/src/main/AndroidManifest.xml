<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="artemtrue.wasteddays">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/screen_title_homepage"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:label="@string/screen_title_homepage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".DaySaved"
            android:label="@string/screen_title_day_saved">
        </activity>

        <activity android:name=".DayWasted"
            android:label="@string/screen_title_day_wasted">
        </activity>

        <activity android:name=".StatsScreen"
            android:label="@string/screen_title_stats">
        </activity>

    </application>

</manifest>